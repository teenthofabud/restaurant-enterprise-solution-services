FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-reservation-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-reservation-service/reservation-app.jar
EXPOSE 17001
CMD ["java", "-jar", \
"-DRESERVATION_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DRESERVATION_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DRESERVATION_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DRESERVATION_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DRESERVATION_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DRESERVATION_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DRESERVATION_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DRESERVATION_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DRESERVATION_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DRESERVATION_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DRESERVATION_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DRESERVATION_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DRESERVATION_DATABASE_HOST=${DATABASE_HOST}", \
"-DRESERVATION_DATABASE_PORT=${DATABASE_PORT}", \
"-DRESERVATION_EUREKA_HOST=${EUREKA_HOST}", \
"-DRESERVATION_EUREKA_PORT=${EUREKA_PORT}", \
"-DRESERVATION_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DRESERVATION_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DRESERVATION_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DRESERVATION_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DRESERVATION_PORT=${PORT}", \
"-DRESERVATION_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DRESERVATION_METADATA_GENDER_FEIGN_LOGGING_LEVEL=${METADATA_GENDER_FEIGN_LOGGING_LEVEL}", \
"-DRESERVATION_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-reservation-service/reservation-app.jar"]