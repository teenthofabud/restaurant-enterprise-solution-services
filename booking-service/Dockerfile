FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-booking-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-booking-service/booking-app.jar
EXPOSE 17001
CMD ["java", "-jar", \
"-DBOOKING_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DBOOKING_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DBOOKING_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DBOOKING_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DBOOKING_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DBOOKING_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DBOOKING_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DBOOKING_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DBOOKING_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DBOOKING_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DBOOKING_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DBOOKING_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DBOOKING_DATABASE_HOST=${DATABASE_HOST}", \
"-DBOOKING_DATABASE_PORT=${DATABASE_PORT}", \
"-DBOOKING_EUREKA_HOST=${EUREKA_HOST}", \
"-DBOOKING_EUREKA_PORT=${EUREKA_PORT}", \
"-DBOOKING_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DBOOKING_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DBOOKING_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DBOOKING_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DBOOKING_PORT=${PORT}", \
"-DBOOKING_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DBOOKING_METADATA_GENDER_FEIGN_LOGGING_LEVEL=${METADATA_GENDER_FEIGN_LOGGING_LEVEL}", \
"-DBOOKING_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-booking-service/booking-app.jar"]