"-DGATEWAY_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DGATEWAY_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DGATEWAY_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DGATEWAY_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DGATEWAY_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DGATEWAY_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DGATEWAY_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DGATEWAY_DATABASE_HOST=${DATABASE_HOST}", \
"-DGATEWAY_DATABASE_PORT=${DATABASE_PORT}", \
"-DGATEWAY_EUREKA_HOST=${EUREKA_HOST}", \
"-DGATEWAY_EUREKA_PORT=${EUREKA_PORT}", \
"-DGATEWAY_ZIPKIN_HOST=${ZIPKIN_HOST}", \
