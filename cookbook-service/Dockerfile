FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-cookbook-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-cookbook-service/cookbook-app.jar
EXPOSE 16001
CMD ["java", "-jar", \
"-DCOOKBOOK_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DCOOKBOOK_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DCOOKBOOK_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DCOOKBOOK_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DCOOKBOOK_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DCOOKBOOK_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DCOOKBOOK_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DCOOKBOOK_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DCOOKBOOK_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DCOOKBOOK_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DCOOKBOOK_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DCOOKBOOK_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DCOOKBOOK_DATABASE_HOST=${DATABASE_HOST}", \
"-DCOOKBOOK_DATABASE_PORT=${DATABASE_PORT}", \
"-DCOOKBOOK_EUREKA_HOST=${EUREKA_HOST}", \
"-DCOOKBOOK_EUREKA_PORT=${EUREKA_PORT}", \
"-DCOOKBOOK_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DCOOKBOOK_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DCOOKBOOK_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DCOOKBOOK_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DCOOKBOOK_PORT=${PORT}", \
"-DCOOKBOOK_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DCOOKBOOK_METADATA_GENDER_FEIGN_LOGGING_LEVEL=${METADATA_GENDER_FEIGN_LOGGING_LEVEL}", \
"-DCOOKBOOK_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-cookbook-service/cookbook-app.jar"]