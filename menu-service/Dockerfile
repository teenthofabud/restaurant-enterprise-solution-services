FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-menu-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-menu-service/menu-app.jar
EXPOSE 12001
CMD ["java", "-jar", \
"-DMENU_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DMENU_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DMENU_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DMENU_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DMENU_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DMENU_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DMENU_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DMENU_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DMENU_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DMENU_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DMENU_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DMENU_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DMENU_DATABASE_HOST=${DATABASE_HOST}", \
"-DMENU_DATABASE_PORT=${DATABASE_PORT}", \
"-DMENU_EUREKA_HOST=${EUREKA_HOST}", \
"-DMENU_EUREKA_PORT=${EUREKA_PORT}", \
"-DMENU_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DMENU_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DMENU_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DMENU_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DMENU_PORT=${PORT}", \
"-DMENU_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DMENU_METADATA_GENDER_FEIGN_LOGGING_LEVEL=${METADATA_GENDER_FEIGN_LOGGING_LEVEL}", \
"-DMENU_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-menu-service/menu-app.jar"]