FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-encounter-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-encounter-service/encounter-app.jar
EXPOSE 13001
CMD ["java", "-jar", \
"-DENCOUNTER_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DENCOUNTER_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DENCOUNTER_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DENCOUNTER_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DENCOUNTER_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DENCOUNTER_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DENCOUNTER_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DENCOUNTER_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DENCOUNTER_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DENCOUNTER_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DENCOUNTER_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DENCOUNTER_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DENCOUNTER_DATABASE_HOST=${DATABASE_HOST}", \
"-DENCOUNTER_DATABASE_PORT=${DATABASE_PORT}", \
"-DENCOUNTER_EUREKA_HOST=${EUREKA_HOST}", \
"-DENCOUNTER_EUREKA_PORT=${EUREKA_PORT}", \
"-DENCOUNTER_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DENCOUNTER_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DENCOUNTER_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DENCOUNTER_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DENCOUNTER_PORT=${PORT}", \
"-DENCOUNTER_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DENCOUNTER_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-encounter-service/encounter-app.jar"]