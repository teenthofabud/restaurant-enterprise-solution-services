FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-print-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-print-service/print-app.jar
EXPOSE 14001
CMD ["java", "-jar", \
"-DPRINT_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DPRINT_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DPRINT_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DPRINT_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DPRINT_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DPRINT_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DPRINT_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DPRINT_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DPRINT_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DPRINT_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DPRINT_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DPRINT_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DPRINT_DATABASE_HOST=${DATABASE_HOST}", \
"-DPRINT_DATABASE_PORT=${DATABASE_PORT}", \
"-DPRINT_EUREKA_HOST=${EUREKA_HOST}", \
"-DPRINT_EUREKA_PORT=${EUREKA_PORT}", \
"-DPRINT_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DPRINT_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DPRINT_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DPRINT_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DPRINT_PORT=${PORT}", \
"-DPRINT_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DPRINT_METADATA_GENDER_FEIGN_LOGGING_LEVEL=${METADATA_GENDER_FEIGN_LOGGING_LEVEL}", \
"-DPRINT_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-print-service/print-app.jar"]