FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-customer-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-customer-service/customer-app.jar
EXPOSE 11001
CMD ["java", "-jar", \
"-DCUSTOMER_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DCUSTOMER_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DCUSTOMER_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DCUSTOMER_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DCUSTOMER_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DCUSTOMER_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DCUSTOMER_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DCUSTOMER_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DCUSTOMER_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DCUSTOMER_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DCUSTOMER_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DCUSTOMER_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DCUSTOMER_DATABASE_HOST=${DATABASE_HOST}", \
"-DCUSTOMER_DATABASE_PORT=${DATABASE_PORT}", \
"-DCUSTOMER_EUREKA_HOST=${EUREKA_HOST}", \
"-DCUSTOMER_EUREKA_PORT=${EUREKA_PORT}", \
"-DCUSTOMER_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DCUSTOMER_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DCUSTOMER_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DCUSTOMER_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DCUSTOMER_PORT=${PORT}", \
"-DCUSTOMER_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DCUSTOMER_METADATA_GENDER_FEIGN_LOGGING_LEVEL=${METADATA_GENDER_FEIGN_LOGGING_LEVEL}", \
"-DCUSTOMER_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-customer-service/customer-app.jar"]