FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/restaurant-enterprise-solutions/restaurant-solution-session-service
COPY target/*.jar /opt/restaurant-enterprise-solutions/restaurant-solution-session-service/session-app.jar
EXPOSE 17001
CMD ["java", "-jar", \
"-DSESSION_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DSESSION_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DSESSION_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DSESSION_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DSESSION_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DSESSION_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DSESSION_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DSESSION_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DSESSION_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DSESSION_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DSESSION_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DSESSION_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DSESSION_DATABASE_HOST=${DATABASE_HOST}", \
"-DSESSION_DATABASE_PORT=${DATABASE_PORT}", \
"-DSESSION_EUREKA_HOST=${EUREKA_HOST}", \
"-DSESSION_EUREKA_PORT=${EUREKA_PORT}", \
"-DSESSION_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DSESSION_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DSESSION_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DSESSION_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DSESSION_PORT=${PORT}", \
"-DSESSION_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DSESSION_METADATA_GENDER_FEIGN_LOGGING_LEVEL=${METADATA_GENDER_FEIGN_LOGGING_LEVEL}", \
"-DSESSION_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/restaurant-enterprise-solutions/restaurant-solution-session-service/session-app.jar"]